@model ShoppingCartCollection
@if (Model == null)
{
    <a class="nav-link text-dark" asp-action="Index" asp-controller="ShoppingCart">Sepet</a>
}
else
{
    <a class="nav-link text-dark" asp-action="Index" asp-controller="ShoppingCart">Sepetinizde @Model.productsInCart.Sum(x => x.Quantity) adet ürün bulunuyor </a>
}

