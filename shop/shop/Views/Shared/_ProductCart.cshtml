@model Product
<div class="card">
    <img src="@Model.ImageUrl" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Price yerine @(Model.Price * (1- Model.Discount)) TL</p>
        <button data-id="@Model.Id" class="btn btn-primary addCart">Sepete Ekle</button>
    </div>
</div>