@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";


}


<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-3">
            <div class="card">
                <img src="@product.ImageUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Price yerine @(product.Price * (1-product.Discount)) TL</p>
                    <a href="#" class="btn btn-primary">Sepete Ekle</a>
                </div>
            </div>
        </div>
    }




</div>

<div class="row">

    <nav aria-label="Page navigation example">
        <ul class="pagination">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.Page==@i ? "active":"")">  <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a></li>

            }


        </ul>
    </nav>

</div>